<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<% if @orders.empty? %>
  <p>No Orders</p>
<% end %>

<div class='orders'>
  <div class='order'>
    <% @orders.each do |order| %>
      <%= order.orderNumber %>
      <%= order.orderDate %>
      <table class='table table-striped'>
        <tbody>
          <% order.orderdetails.each do |detail| %>
            <% product = detail.product%>
            <tr>
			<td><%= link_to image_tag(product.image), product_path(product) %></td>
              <td><%= link_to product.productName, product_path(product) %></td>
              <td><%= number_to_currency detail.priceEach %></td>
              <td><%= detail.quantityOrdered %></td>
              <td><%= "Total: #{number_to_currency detail.total}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p>Order Total: <%= number_to_currency order.total %></p>
    <% end %>
  </div>
</div>


