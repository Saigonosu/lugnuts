  <div class="field">
    <%= form.label :productScale %>
    <%= form.text_field :productScale, id: :product_productScale %>
  </div>

  <div class="field">
    <%= form.label :productVendor %>
    <%= form.text_field :productVendor, id: :product_productVendor %>
  </div>

  <div class="field">
    <%= form.label :productDescription %>
    <%= form.text_area :productDescription, id: :product_productDescription %>
  </div>

  <div class="field">
    <%= form.label :quantityInStock %>
    <%= form.number_field :quantityInStock, id: :product_quantityInStock %>
  </div>

  <div class="field">
    <%= form.label :buyPrice %>
    <%= form.text_field :buyPrice, id: :product_buyPrice %>
